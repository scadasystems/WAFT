    <TextView
            android:visibility="gone"
            android:id="@+id/updatedMsg"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2962FF"
            android:text="★★ 회원 정보를 수정하였습니다. ★★"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/updatedMsg"
                tools:ignore="NotSibling">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        tools:context=".ProfileSetting.ProfileActivity">
            <RelativeLayout
                    android:id="@+id/rellay1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <RelativeLayout
                        android:id="@+id/img1"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/polg"/>
                <RelativeLayout
                        android:id="@+id/img2"
                        android:layout_below="@+id/img1"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@color/accent">
                    <TextView
                            android:id="@+id/tv_nickName"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="WAFT"
                            android:textColor="@color/address"
                            android:textSize="32sp"/>
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_nickName"
                            android:layout_centerHorizontal="true"
                            android:orientation="horizontal">
                        <TextView
                                android:id="@+id/tv_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="sans-serif-light"
                                android:text="상태메시지"
                                android:textColor="@color/address"
                                android:textSize="14sp"/>
                        <ImageView
                                android:id="@+id/editStatus"
                                android:layout_width="14sp"
                                android:layout_height="14sp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_edit"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                        android:id="@+id/userImg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:layout_centerInParent="true">
                    <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/img_profileImage"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/default_profile_image"
                            android:layout_margin="9dp"
                            app:civ_border_color="#FFFFFFFF"
                            app:civ_border_width="5dp"/>
                    <ImageView
                            android:id="@+id/editPhotoIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-60dp"
                            android:layout_marginBottom="15dp"
                            android:elevation="2dp"
                            android:layout_alignParentBottom="true"
                            android:layout_toRightOf="@id/img_profileImage"
                            android:background="@drawable/rounded"
                            android:src="@drawable/ic_camera"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rellay1">
                <LinearLayout
                        android:id="@+id/linlay2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:clipToPadding="false"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp">
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="4dp"
                            app:hintEnabled="true"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/rounded2"
                            android:layout_marginBottom="8dp">
                        <EditText
                                android:id="@+id/edt_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="이름"
                                android:singleLine="true"
                                android:drawableLeft="@drawable/ic_person"
                                android:drawablePadding="20dp"
                                android:background="@null"
                                android:inputType="textCapSentences|textPersonName"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:elevation="4dp"
                            android:background="@drawable/rounded2"
                            android:layout_marginBottom="8dp">
                        <EditText
                                android:id="@+id/edt_uid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="닉네임"
                                android:singleLine="true"
                                android:drawableLeft="@drawable/ic_edit"
                                android:drawablePadding="20dp"
                                android:background="@null"
                                android:inputType="textCapSentences|textPersonName"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:elevation="4dp"
                            android:background="@drawable/rounded2"
                            android:layout_marginBottom="8dp">
                        <EditText
                                android:id="@+id/edt_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="이메일"
                                android:drawableLeft="@drawable/ic_email"
                                android:drawablePadding="20dp"
                                android:background="@null"
                                android:inputType="textCapSentences|textEmailAddress"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:elevation="4dp"
                            android:background="@drawable/rounded2"
                            android:orientation="horizontal">
                        <ImageView android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_gravity="bottom"
                                   android:padding="10dp"
                                   android:background="@drawable/ic_place"/>
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:orientation="vertical"
                                      android:layout_marginLeft="20dp">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="-5dp"
                                    android:text="국가"
                                    android:textFontWeight="100"
                                    android:textColor="@color/dark_gray"
                                    android:textSize="11.5dp"/>
                            <com.hbb20.CountryCodePicker
                                    android:id="@+id/ccp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="-10dp"
                                    android:layout_marginBottom="-2dp"
                                    app:ccpDialog_initialScrollToSelection="true"
                                    app:ccp_countryPreference="KR"
                                    app:ccpDialog_keyboardAutoPopup="false"
                                    app:ccp_showFullName="true"
                                    app:ccp_showPhoneCode="false"
                                    android:drawableLeft="@drawable/ic_place"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:elevation="4dp"
                            android:background="@drawable/rounded2"
                            android:orientation="horizontal">
                        <ImageView android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_gravity="bottom"
                                   android:padding="10dp"
                                   android:background="@drawable/ic_wc"/>
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:orientation="vertical"
                                      android:layout_marginLeft="20dp">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="성별"
                                    android:textFontWeight="100"
                                    android:textColor="@color/dark_gray"
                                    android:textSize="11.5dp"/>
                            <RadioGroup
                                    android:id="@+id/rg_gender"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="-5dp"
                                    android:orientation="horizontal">
                                <RadioButton
                                        android:id="@+id/rb_male"
                                        android:onClick="selectedGenderRB"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="남"/>
                                <RadioButton
                                        android:id="@+id/rb_female"
                                        android:onClick="selectedGenderRB"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="여"/>
                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                            android:id="@+id/recheckGender"
                            android:layout_gravity="center"
                            android:padding="3dp"
                            android:textSize="12sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/recheck_gender"/>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal">
                        <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_cancel"
                                style="@style/Widget.AppCompat.Button.Colored"
                                app:backgroundTint="@color/address"
                                android:padding="5sp"
                                android:layout_margin="5sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="돌아가기"/>
                        <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_save"
                                style="@style/Widget.AppCompat.Button.Colored"
                                app:backgroundTint="@color/address"
                                android:padding="5sp"
                                android:layout_margin="5sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="수정하기"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>