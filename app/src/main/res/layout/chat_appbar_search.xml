<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="center_horizontal"
    android:background="?attr/backgroundcolor">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:src="?attr/cancelButton_WB" />

    <cn.zhaiyifan.rememberedittext.RememberEditText
        android:id="@+id/serachInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="05dp"
        android:layout_toEndOf="@+id/backButton"
        android:hint="@string/search_a_name"
        android:inputType="textCapWords"
        android:textColor="?attr/tintcolor"
        android:textColorHint="?attr/textGrayColor"
        app:autoFill="false"
        app:autoSave="true"
        app:deleteIcon="@drawable/search_clear"
        app:dropDownIcon="@drawable/search_down"
        app:dropUpIcon="@drawable/search_up"
        app:rememberCount="5"
        app:rememberId="searchText" />


</RelativeLayout>