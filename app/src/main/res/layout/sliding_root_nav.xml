<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" tools:layout_editor_absoluteY="25dp">

    <com.google.android.material.button.MaterialButton
            android:id="@+id/material_icon_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:onClick="btnProfile"
            android:text="수정하기"
            app:icon="@drawable/ic_border_color_red_500_24dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_logout"
            app:layout_constraintStart_toStartOf="@+id/btn_logout"/>

    <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_image"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/default_profile_image"
            app:civ_border_color="#616161"
            app:civ_border_width="3dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toStartOf="@+id/tv_status" app:layout_constraintTop_toTopOf="@+id/btn_logout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginEnd="18dp"/>
    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_nickName"
            android:textSize="30sp" android:textStyle="bold"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="@+id/user_image" app:layout_constraintStart_toStartOf="@+id/tv_status"
            android:layout_marginTop="14dp"/>
    <TextView
            android:text="Status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_status"
            android:textSize="15sp"
            android:fitsSystemWindows="false"
            app:layout_constraintStart_toEndOf="@+id/user_image"
            app:layout_constraintEnd_toStartOf="@+id/material_icon_button" android:layout_marginBottom="22dp"
            app:layout_constraintBottom_toBottomOf="@+id/user_image" android:layout_marginEnd="22dp"
    />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_logout"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:text="LogOut"
            android:onClick="btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>