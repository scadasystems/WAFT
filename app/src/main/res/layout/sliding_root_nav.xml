<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" tools:layout_editor_absoluteY="25dp">

    <ImageButton
            android:background="@drawable/ic_border_color_red_500_24dp"
            android:layout_width="30dp"
            android:layout_height="0dp"
            tools:ignore="MissingConstraints"
            android:id="@+id/edit_profile"
            android:onClick="btnProfile"
            app:layout_constraintStart_toStartOf="@+id/btn_logout"
            app:layout_constraintEnd_toEndOf="@+id/btn_logout" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_logout" android:layout_marginBottom="453dp"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/material_icon_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정하기"
            app:icon="@drawable/ic_border_color_red_500_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="31dp"
            app:layout_constraintTop_toBottomOf="@+id/user_image" android:layout_marginBottom="361dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/default_profile_image"
            app:civ_border_color="#616161"
            app:civ_border_width="3dp"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="22dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_nickName" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/material_icon_button" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="18dp"/>
    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_nickName"
            android:textSize="20sp" android:textStyle="bold"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toTopOf="@+id/user_image" app:layout_constraintStart_toEndOf="@+id/user_image"
            android:layout_marginStart="18dp"/>
    <TextView
            android:text="Status"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_status"
            android:textSize="13sp"
            android:fitsSystemWindows="false"
            app:layout_constraintStart_toStartOf="@+id/tv_nickName" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/user_image" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_nickName"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_logout"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:text="LogOut"
            android:onClick="btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/edit_profile"
    />
</androidx.constraintlayout.widget.ConstraintLayout>