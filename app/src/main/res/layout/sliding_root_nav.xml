<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" tools:layout_editor_absoluteY="25dp">

    <Button
            android:id="@+id/material_icon_button"
            android:layout_width="wrap_content"
            android:background="@drawable/ripplebutton"
            android:layout_height="wrap_content"
            android:onClick="btnProfile"
            android:text="수정하기"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_status"
            app:layout_constraintStart_toEndOf="@+id/btn_logout"/>

    <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/default_profile_image"
            app:civ_border_color="#616161"
            app:civ_border_width="3dp"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_status" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_logout" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp" android:layout_marginEnd="16dp" app:layout_constraintVertical_bias="1.0"
    />
    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_nickName"
            android:textSize="30sp" android:textStyle="bold"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/tv_status"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="Status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_status"
            android:textSize="15sp"
            android:fitsSystemWindows="false"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_nickName" app:layout_constraintStart_toEndOf="@+id/user_image"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="150dp"
    />

    <Button
            android:id="@+id/btn_logout"
            android:background="@drawable/ripplebutton"
            android:text="LogOut"
            android:onClick="btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/material_icon_button" android:layout_marginStart="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>