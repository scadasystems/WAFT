<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="?attr/backgroundcolor"
        android:orientation="vertical"
        app:behavior_peekHeight="?actionBarSize"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/olive_drab"
            android:paddingEnd="8dp"
            android:paddingStart="8dp">
        <ToggleButton
                android:id="@+id/toggleButton"
                android:text=""
                android:textOn=""
                android:textOff=""
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/tb_up_down"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/toggleButton"
                android:layout_centerVertical="true"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:text="@string/distance"/>
                <TextView
                        android:id="@+id/tv_distance"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:text="@string/time"/>
                <TextView
                        android:id="@+id/tv_duration"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">
            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_driving"
                    style="@style/Widget.MaterialComponents.FloatingActionButton"
                    android:backgroundTint="#00ffffff"
                    android:textColor="@color/button_selector"
                    android:textStyle="bold"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DRIVE"/>
            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_walking"
                    style="@style/Widget.MaterialComponents.FloatingActionButton"
                    android:backgroundTint="#00ffffff"
                    android:textColor="@color/button_selector"
                    android:textStyle="bold"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WALK"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:elevation="4dp"
                android:textColorHint="?attr/tintcolor"
                android:background="@drawable/rounded2"
                android:layout_marginBottom="8dp">
            <EditText
                    android:id="@+id/edt_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="?attr/tintcolor"
                    android:textColorHint="?attr/tintcolor"
                    android:hint="@string/innerPosition"
                    android:drawableLeft="@drawable/ic_place"
                    android:drawablePadding="20dp"
                    android:background="@null"
                    android:inputType="textCapSentences|textPersonName"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:elevation="4dp"
                android:textColorHint="?attr/tintcolor"
                android:background="@drawable/rounded2"
                android:layout_marginBottom="8dp">
            <EditText
                    android:id="@+id/edt_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:hint="@string/destination"
                    android:textColor="?attr/tintcolor"
                    android:textColorHint="?attr/tintcolor"
                    android:drawableLeft="@drawable/ic_place"
                    android:drawablePadding="20dp"
                    android:background="@null"
                    android:inputType="textCapSentences|textPersonName"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>


</LinearLayout>