<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

<PreferenceCategory android:title="@string/stname">
    <Preference
    android:key="pref_ntic"
    android:title="@string/notice"
    android:summary="@string/notice_str"
    android:icon="@drawable/notic"/>
    <SwitchPreference
            android:key="pref_black"
            android:defaultValue="false"
            android:persistent="true"
            android:icon="@drawable/theme"
