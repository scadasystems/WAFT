    android:summary="@string/theme_change_str"/>
    <Preference
        android:defaultValue="false"
        android:persistent="true"
        android:key="pref_lag"
        android:icon="@drawable/lagig"
        android:title="@string/language"
        android:summary="@string/language_str"/>
</PreferenceCategory>

</PreferenceScreen>